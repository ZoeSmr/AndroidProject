<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UnitConversion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="单位换算"
            android:textSize="35sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="长度单位"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="输入数据:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_3"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="单位:"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:textSize="30sp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="输出数据:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_4"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="单位:"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:textSize="30sp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="面积单位"
            android:textSize="30sp"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="输入数据:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_5"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="单位:"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <Spinner
                android:id="@+id/spinner5"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:textSize="30sp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_input2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="输出数据:"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_6"
                android:layout_width="125dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:text="单位:"
                android:textSize="20sp"
                android:textColor="#000"
                />
            <Spinner
                android:id="@+id/spinner6"
                android:layout_width="240dp"
                android:layout_height="35dp"
                android:textSize="30sp"
                />
        </LinearLayout>
        <EditText
            android:id="@+id/et_out2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btn2_0"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:text="0"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_1"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="1"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_2"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="2"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_3"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="3"
                android:background="@drawable/btn_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btn2_4"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:text="4"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_5"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="5"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_6"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="6"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_7"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="7"
                android:background="@drawable/btn_1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <Button
                android:id="@+id/btn2_8"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="5dp"
                android:text="8"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_9"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="9"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_CE"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="CE"
                android:background="@drawable/btn_1"
                />
            <Button
                android:id="@+id/btn2_js"
                android:layout_width="70dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="计算"
                android:background="@drawable/btn_1"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>